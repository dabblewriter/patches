{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "types": ["vitest/globals"] // Add Vitest global types
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"] // Also include test files
}
