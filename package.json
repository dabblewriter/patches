{
  "name": "@dabble/patches",
  "version": "0.4.1",
  "description": "Immutable JSON Patch implementation based on RFC 6902 supporting operational transformation and last-writer-wins",
  "author": "Jacob Wright <jacwright@gmail.com>",
  "bugs": {
    "url": "https://github.com/dabblewriter/patches/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./net": {
      "import": "./dist/net/index.js",
      "types": "./dist/net/index.d.ts"
    },
    "./webrtc": {
      "import": "./dist/net/webrtc/index.js",
      "types": "./dist/net/webrtc/index.d.ts"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "dist"
  ],
  "homepage": "https://github.com/dabblewriter/patches/",
  "keywords": [
    "immutable",
    "json",
    "patch",
    "rfc6902",
    "operational-transformation",
    "collaborative-editing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dabblewriter/patches.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "svelte-package -i src",
    "prepare": "npm run build",
    "test": "vitest run",
    "tdd": "vitest",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type:check": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix"
  },
  "dependencies": {
    "@dabble/delta": "^1.2.4",
    "alphacounter": "^2.1.1",
    "crypto-id": "^0.3.0",
    "simple-peer": "^9.11.1",
    "simplified-concurrency": "^0.2.0"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.0",
    "@types/simple-peer": "^9.11.8",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "fake-indexeddb": "^6.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}