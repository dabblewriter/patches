{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "moduleResolution": "bundler",
    "module": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "types": ["vitest/globals"],
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
